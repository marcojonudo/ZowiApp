<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/guide_images_container">

        <ImageView
            android:contentDescription="@string/guide_image_content_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guide_cell_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guide_cell_2"
            android:layout_margin="@dimen/pyramid_images_margin"/>

        <ImageView
            android:contentDescription="@string/guide_image_content_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guide_cell_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guide_cell_1"
            app:layout_constraintRight_toLeftOf="@+id/guide_cell_3"
            android:layout_margin="@dimen/pyramid_images_margin"/>

        <ImageView
            android:contentDescription="@string/guide_image_content_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guide_cell_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guide_cell_2"
            app:layout_constraintRight_toLeftOf="@+id/guide_cell_4"
            android:layout_margin="@dimen/pyramid_images_margin"/>

        <ImageView
            android:contentDescription="@string/guide_image_content_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guide_cell_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guide_cell_3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/pyramid_images_margin"/>
        
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:lines="3"
            android:gravity="center"
            android:text="@string/show_house"/>

    </RelativeLayout>

</LinearLayout>
