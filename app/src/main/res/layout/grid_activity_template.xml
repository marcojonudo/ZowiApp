<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/grid_template_container">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin"
        android:text="Â¡Go!"
        android:id="@+id/controls"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="@dimen/controls_side"
            android:layout_height="@dimen/controls_side"
            android:layout_gravity="center"
            android:src="@drawable/outer_control"/>

        <ImageView
            android:layout_width="@dimen/controls_center_side"
            android:layout_height="@dimen/controls_center_side"
            android:layout_gravity="center"
            android:src="@drawable/inner_control"
            android:id="@+id/inner_control"/>

    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/grid"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="7"
            android:background="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/movements_grid">

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

            <View
                android:layout_width="@dimen/movement_cell_side"
                android:layout_height="@dimen/movement_cell_side"
                android:gravity="center"
                android:background="@color/white"
                android:layout_margin="@dimen/movement_cell_margin"/>

        </GridLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/paper_bin"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/movements_grid"
            android:id="@+id/paper_bin"
            android:onClick="deleteMovement"/>
    </RelativeLayout>

</RelativeLayout>
