<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/logic_blocks_guideline"
        app:layout_constraintDimensionRatio="1:1">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/logic_blocks_cell_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/logic_blocks_cell_2"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <ImageView
            android:contentDescription="@string/logic_blocks_content_description_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/logic_blocks_cell_5"
            app:layout_constraintLeft_toRightOf="@+id/logic_blocks_cell_1"
            app:layout_constraintRight_toLeftOf="@+id/logic_blocks_cell_3"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/logic_blocks_cell_6"
            app:layout_constraintLeft_toRightOf="@+id/logic_blocks_cell_2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <ImageView
            android:contentDescription="@string/logic_blocks_content_description_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_4"
            app:layout_constraintTop_toBottomOf="@+id/logic_blocks_cell_1"
            app:layout_constraintBottom_toTopOf="@+id/logic_blocks_cell_7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/logic_blocks_cell_5"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <ImageView
            android:contentDescription="@string/logic_blocks_content_description_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_5"
            app:layout_constraintTop_toBottomOf="@+id/logic_blocks_cell_2"
            app:layout_constraintBottom_toTopOf="@+id/logic_blocks_cell_8"
            app:layout_constraintLeft_toRightOf="@+id/logic_blocks_cell_4"
            app:layout_constraintRight_toLeftOf="@+id/logic_blocks_cell_6"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <ImageView
            android:contentDescription="@string/logic_blocks_content_description_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_6"
            app:layout_constraintTop_toBottomOf="@+id/logic_blocks_cell_3"
            app:layout_constraintBottom_toTopOf="@+id/logic_blocks_cell_9"
            app:layout_constraintLeft_toRightOf="@+id/logic_blocks_cell_5"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_7"
            app:layout_constraintTop_toBottomOf="@+id/logic_blocks_cell_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/logic_blocks_cell_8"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <ImageView
            android:contentDescription="@string/logic_blocks_content_description_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_8"
            app:layout_constraintTop_toBottomOf="@+id/logic_blocks_cell_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/logic_blocks_cell_7"
            app:layout_constraintRight_toLeftOf="@+id/logic_blocks_cell_9"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logic_blocks_cell_9"
            app:layout_constraintTop_toBottomOf="@+id/logic_blocks_cell_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/logic_blocks_cell_8"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/logic_grid_cell_margin"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logic_blocks_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/logic_blocks_left_button"
        android:background="@drawable/rounded_button_green"
        android:text="@string/logic_blocks_turn_left"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/logic_blocks_guideline"
        app:layout_constraintRight_toLeftOf="@+id/logic_blocks_guideline_2"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="@dimen/logic_button_start_margin"
        android:layout_marginEnd="@dimen/logic_button_end_margin"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logic_blocks_guideline_2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/logic_blocks_right_button"
        android:background="@drawable/rounded_button_green"
        android:text="@string/logic_blocks_turn_right"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/logic_blocks_guideline_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="@dimen/logic_button_end_margin"
        android:layout_marginEnd="@dimen/logic_button_start_margin"/>

</android.support.constraint.ConstraintLayout>