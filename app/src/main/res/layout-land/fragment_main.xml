<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zowiapp.zowi.marco.zowiapp.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choosGameTypeText"
        android:text="@string/choose_game_type_text"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choosGameTypeText"
        android:orientation="horizontal"
        android:background="@color/red"
        android:gravity="center">
        
        <zowiapp.zowi.marco.zowiapp.layout.SquareButton
            style="@style/squareButton"
            android:id="@+id/freeGameButton"
            android:text="@string/free_game_button_text" />

        <zowiapp.zowi.marco.zowiapp.layout.SquareButton
            style="@style/squareButton"
            android:id="@+id/guidedGameButton"
            android:text="@string/guided_game_button_text"/>

    </LinearLayout>

</RelativeLayout>
